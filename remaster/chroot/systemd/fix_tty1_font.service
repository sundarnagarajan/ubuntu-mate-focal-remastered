[Unit]
Description=Set console font for /dev/tty1
After=local-fs.target getty@tty1.service console-setup.service
ConditionPathExists=/bin/setupcon
ConditionPathExists=/bin/openvt

[Service]
Type=oneshot
# Following ExecStart commands will run serially
ExecStart=/bin/openvt -c 1 -f -w /bin/setupcon 
ExecStart=/bin/systemctl stop getty@tty1.service
ExecStart=/bin/systemctl start getty@tty1.service
RemainAfterExit=yes

[Install]
WantedBy=multi-user.target
